<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFBE8" /> <!-- Background color -->
            <corners android:radius="16dp" /> <!-- Adjust the radius for curved corners -->
        </shape>
    </item>

    <!-- Elevation/shadow -->
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Same color as background -->
            <corners android:radius="16dp" /> <!-- Same radius as background -->
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" /> <!-- Border color -->
            <gradient
                android:angle="270"
                android:centerColor="#DDDDDD"
                android:endColor="#DDDDDD"
                android:startColor="#DDDDDD" /> <!-- Shadow direction -->
        </shape>
    </item>
</layer-list>
